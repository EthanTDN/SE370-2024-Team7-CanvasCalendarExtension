public class Main {
    public static void main(String[] args) {
        AssignmentFacade facade = new AssignmentFacade();
        facade.createAssignment(1, "SE370", "Lab 1", 100);
        double grade = facade.calculateGrade(1, 85);
        System.out.println("Grade for assignment 1: " + grade + "%");
        String course = facade.getCourseName(1);
        System.out.println("Course name for assignment 1: " + course);
        // ... other usage examples ...
    }
}
